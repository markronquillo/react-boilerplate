{
  "presets": [
    "react",
    ["env", {
        "targets": {
          "browsers": "last 2 versions"
        },
        "loose": true,
        "modules": false 
    }]
  ],
  "plugins": [
    "react-hot-loader/babel",
    "babel-plugin-transform-class-properties",
    ["import", { "libraryName": "antd", "libraryDirectory": "es", "style": "css" }] 
  ],
  "env": {
    "test": {
      "plugins": [
        "babel-plugin-transform-es2015-modules-commonjs"
      ]
    }
  }
}
